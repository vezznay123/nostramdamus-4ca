{
  "name": "nostradamus-forecast-workers",
  "version": "1.0.0",
  "description": "Retail forecasting with Cloudflare Workers AI",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "db:create": "wrangler d1 create nostradamus-db",
    "db:migrate": "wrangler d1 execute nostradamus-db --file=./schema.sql",
    "db:local": "wrangler d1 execute nostradamus-db --local --file=./schema.sql"
  },
  "dependencies": {
    "@cloudflare/ai": "^1.2.2",
    "hono": "^3.12.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "typescript": "^5.3.3",
    "wrangler": "^3.22.1"
  }
}
